@model  Indpro.Attendance.WebApp.Models.EmployeeIndexModel

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Employees</h2>

            <div class="row">
                <div class="col-md-12">
                    @Html.ActionLink("Add Employee", "NewEmployee")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Label("IncludeNonActive")&nbsp;@Html.CheckBoxFor(m => m.IncludeNonActive)&nbsp;
                    <input type="button" value="Show" class="btn btn-info" onclick="loadEmployees();" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("EmployeeListPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function loadEmployees() {
        location.href = '/Employees?IncludeNonActive=' + document.getElementById('IncludeNonActive').checked;
    }
</script>