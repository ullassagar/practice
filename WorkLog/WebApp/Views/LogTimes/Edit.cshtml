@using Indpro.Attendance.Entity;
@model WebApp.Models.LogTimeModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit LogTime</h2>

            @using (Html.BeginForm("Update", "LogTimes", FormMethod.Post))
            {
                @Html.HiddenFor(l => l.LogTimeID)

                <table class="table table-bordered table-striped">

                    <tr>
                        <td> @Html.LabelFor(l => l.EmployeeID)</td>
                        <td> @Html.TextBoxFor(l => l.EmployeeID)</td>
                    </tr>

                    <tr>
                        <td>  @Html.LabelFor(l => l.LoggedTime) </td>
                        <td>
                            <div class='input-group date datetimepicker'>
                                @if (Model.LoggedTime != DateTime.MinValue)
                                {
                                    @Html.TextBoxFor(m => m.LoggedTime,  new { @class = "form-control" })
                                }
                                else
                                {
                                    @Html.TextBoxFor(m => m.LoggedTime, new { @class = "form-control" })
                                }
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(l => l.LogType)</td>
                        <td>
                            <label for="rdoWork">Work</label>
                            @Html.RadioButtonFor(l => l.LogType, LogType.Work, new { @id = "rdoWork" })
                            <label for="rdoTea">Tea</label>
                            @Html.RadioButtonFor(l => l.LogType, LogType.Tea, new { @id = "rdoTea" })
                            <label for="rdoLunch">Lunch</label>
                            @Html.RadioButtonFor(l => l.LogType, LogType.Lunch, new { @id = "rdoLunch" })
                        </td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(l => l.IsInTime)</td>
                        <td>@Html.TextBoxFor(l => l.IsInTime)</td>

                    </tr>

                </table>

                <input type="submit" value="Submit" class="btn btn-primary" />
            }

        </div>
    </div>
</div>
