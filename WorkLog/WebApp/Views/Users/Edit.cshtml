@model WebApp.Models.UserModel

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>User</h2>
            @using (Html.BeginForm("Update", "Users", FormMethod.Post))
            {
                @Html.HiddenFor(u => u.UserID)
                @Html.HiddenFor(u => u.EmployeeID)

            <table class="table table-bordered table-striped">
                <tr>
                    <td>  @Html.LabelFor(u => u.UserName)</td>
                    <td>  @Html.TextBoxFor(u => u.UserName)</td>
                </tr>

                <tr>
                    <td>  @Html.LabelFor(u => u.Password)</td>
                    <td> @Html.TextBoxFor(u => u.Password)</td>
                </tr>
            </table>

            <input type="submit" value="Submit" class="btn btn-primary" />

            }
        </div>
    </div>
</div>
