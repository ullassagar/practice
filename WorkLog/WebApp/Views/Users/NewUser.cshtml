@using BusinessLayer
@model WebApp.Models.UserModel

@{

    Dictionary<int, string> roles = UserHandler.GetRoles();
    SelectList selectRoles = new SelectList(roles, "Key", "Value");
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Add User</h2>
            <div class="row">
                <div class="col-md-1">&nbsp;</div>
            </div>

            @using (Html.BeginForm("Add", "Users", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-md-2">@Html.Label("EmployeeID")</div>
                    <div class="col-md-2">@Html.TextBoxFor(u => u.EmployeeID, new { Class = "form-control" })</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-md-2">@Html.Label("User name")</div>
                    <div class="col-md-2">@Html.TextBoxFor(u => u.UserName, new { Class = "form-control" })</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-md-2">@Html.Label("Password")</div>
                    <div class="col-md-2">@Html.TextBoxFor(u => u.Password, new { Class = "form-control" })</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                </div>
                
                <div class="row">
                    <div class="col-md-2">@Html.Label("Role")</div>
                    <div class="col-md-2">@Html.DropDownListFor(m=>m.RoleID,@selectRoles)</div>
                </div>
                <div class="row">
                    <div class="col-md-1">&nbsp;</div>
                </div>
                
                <input type="submit" value="submit" class="btn btn-primary">
            }
        </div>
    </div>
</div>